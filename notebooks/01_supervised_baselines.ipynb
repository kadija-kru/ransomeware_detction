#Baseline Supervised ML Models
import pandas as pd
import numpy as np
import os # Import the os module

from sklearn.model_selection import train_test_split
from sklearn.metrics import (
    classification_report,
    confusion_matrix,
)

from sklearn.linear_model import LogisticRegression
from sklearn.ensemble import RandomForestClassifier

import joblib

#Load preprocessed data
df = pd.read_csv("/content/ransomeware_detction/data/UGRansome_Dataset_2024 (1).csv")
#Encode labels
label_map = {"A": 0, "S": 1, "SS": 2}
df["Prediction"] = df["Prediction"].map(label_map)
#save for reuse
joblib.dump(label_map, "/content/ransomeware_detction/artifacts/label_mapping.pkl")
#Load preprocessor
preproc = joblib.load("/content/ransomeware_detction/artifacts/preprocessor.pkl")
#Apply to features:
X_raw = df.drop(columns=["Prediction"])
y = df["Prediction"].values

X = preproc.transform(X_raw)

#Train/validation split
#We split chronologically to avoid leakage

df_sorted = df.sort_values("Time").reset_index(drop=True)
X = preproc.transform(df_sorted.drop(columns=["Prediction"]))
y = df_sorted["Prediction"].values

X_train, X_test, y_train, y_test = train_test_split(
    X, y, test_size=0.25, shuffle=False
)

# Create the models directory if it doesn't exist
if not os.path.exists("models"):
    os.makedirs("models")

#logistic Regression
logreg = LogisticRegression(max_iter=2000, multi_class="multinomial")
logreg.fit(X_train, y_train)

pred_lr = logreg.predict(X_test)

print("=== Logistic Regression ===")
print(classification_report(y_test, pred_lr))
print(confusion_matrix(y_test, pred_lr))

#save model
joblib.dump(logreg, "models/logreg.pkl")

#Random Forest

rf = RandomForestClassifier(
    n_estimators=200,
    max_depth=None,
    n_jobs=-1
)

rf.fit(X_train, y_train)
pred_rf = rf.predict(X_test)

print("=== Random Forest ===")
print(classification_report(y_test, pred_rf))
print(confusion_matrix(y_test, pred_rf))
#Save model
joblib.dump(rf, "models/random_forest.pkl")
