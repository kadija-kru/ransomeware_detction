
import pandas as pd
import numpy as np
import os
import nbformat as nbf
from IPython.display import display

# adjust path
df = pd.read_csv("/content/ransomeware_detction/data/UGRansome_Dataset_2024 (1).csv")

# Basic info
print("shape:", df.shape)
display(df.dtypes)
display(df.head())

# Missing & unique counts
print("\nMissing values:")
display(df.isna().sum())

print("\nUnique counts (sample):")
display(df.nunique().sort_values(ascending=False).head(20))

# Label distribution
print("\nLabel distribution (Prediction):")
display(df["Prediction"].value_counts(normalize=False))
display(df["Prediction"].value_counts(normalize=True))

# Time analysis
if "Time" in df.columns:
    try:
        df["Time_parsed"] = pd.to_datetime(df["Time"], errors="coerce")
        print("\nTime parsed OK. Range:")
        display(df["Time_parsed"].min(), df["Time_parsed"].max())
        print("Parsing errors:", df["Time_parsed"].isna().sum())
    except Exception as e:
        print("Time column parsing error:", e)

# numeric summary
numeric = df.select_dtypes(include=[np.number]).columns.tolist()
print("\nNumeric columns:", numeric)
display(df[numeric].describe().T)

# categorical distributions
cats = ["Protocol", "Flag", "Family", "Clusters", "Port", "Threats"]
for c in cats:
    if c in df.columns:
        print(f"\nValue counts for {c}:")
        display(df[c].value_counts().head(20))
